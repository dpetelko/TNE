@model List<ElectricityMeterDto>
@{
    ViewData["Title"] = "ТрансНефтьЭнерго - Счетчики электроэнергии";
}
<div class="container-md">
    <h3 class="text-center">Счетчики электроэнергии</h3>
    
    <div id="accordion">
            <div class="card">
                <div class="card-header" id="headingOne">
                    <a asp-action="Create" asp-controller="ElectricityMeters" class="btn btn-secondary btn-sm">Добавить новый счетчик электроэнергии</a>
                    <button class="btn btn-warning btn-sm" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne"> Контроль поверки приборов </button>
                    <input type="button" class="btn btn-secondary btn-sm" value="Печать" onclick="window.print();" />
                </div>
    
                <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                    <div class="card-body">
                        <form asp-action="Index" method="get">
                            <div class="row">
                                <div class="col">
                                    <div class="form-group row">
                                        <label class="control-label">Объект потребления</label>
                                        <select name="ProviderId" class="form-control form-control-sm" asp-items="ViewBag.ProviderList">
                                            <option value=null selected>Не выбрано</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-1"></div>
                                <div class="col">
                                    <div class="form-group row">
                                        <label class="control-label">Контрольная дата</label>
                                        <input type="date" name="CheckDate" class="form-control form-control-sm" />
                                    </div>
                                </div>
                            </div>
    
                            <input type="submit" value="Применить" class="btn btn-warning btn-sm" />
    
                        </form>
                    </div>
                </div>
            </div>
        </div>
    
    <table class="table table-stripped table-hover">
        <tr>
            <td><strong>Номер</strong></td>
            <td><strong>Тип прибора</strong></td>
            <td><strong>Последняя поверка</strong></td>
            <td><strong>Очередная поверка</strong></td>
            <td><strong>Точка измерения</strong></td>
            <td><strong>Статус</strong></td>
            <td></td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Number</td>
                <td>@item.Type</td>
                <td>@item.LastVerificationDate.ToShortDateString()</td>
                <td>@item.LastVerificationDate.AddDays(@item.InterTestingPeriodInDays).ToShortDateString() </td>

                @if (@String.IsNullOrEmpty(item.ControlPointName))
                {
                    <td>Не привязана</td>
                }
                else
                {
                    <td>@item.ControlPointName</td>
                }
            <td>@Html.DisplayFor(modelItem => item.Status)</td>

                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Details" asp-controller="ElectricityMeters" asp-route-id="@item.Id" class="btn btn-outline-success btn-sm">Подробнее</a>
                        <a asp-action="Edit" asp-controller="ElectricityMeters" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">Редактировать</a>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>