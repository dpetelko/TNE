@model List<LeadDivisionDto>
@{
    ViewData["Title"] = "Каталог товаров";
}
<br />
<div class="container-sm">
    <table class="table table-stripped table-hover">
        <tr>
            <td><strong>Имя</strong></td>
            <td><strong>Индекс</strong></td>
            <td><strong>Страна</strong></td>
            <td><strong>Регион</strong></td>
            <td><strong>Город</strong></td>
            <td><strong>Улица</strong></td>
            <td><strong>Строение</strong></td>
            <td></td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.PostCode</td>
                <td>@item.Country</td>
                <td>@item.Region</td>
                <td>@item.City</td>
                <td>@item.Street</td>
                <td>@item.Building</td>
                <td>
                    <div class="btn-group" role="group">

                            <a th:href="" class="btn btn-outline-success btn-sm" data-toggle="modal" data-target="#exampleModal" data-whatever="@item">Подробности</a>
                            <a th:href="" class="btn btn-outline-warning btn-sm">Редактировать</a>
                            <a th:href="" class="btn btn-outline-danger font-weight-bold btn-sm" id="deleteButton">Удалить</a>

                    </div>
                </td>
            </tr>
        }
    </table>

</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Подробная информация</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Индекс:</label>
                        <input type="text" class="form-control" id="recipient-name">
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Recipient:</label>
                        <input type="text" class="form-control" id="recipient-name1">
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Recipient:</label>
                        <input type="text" class="form-control" id="recipient-name2">
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Message:</label>
                        <textarea class="form-control" id="message-text"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Send message</button>
            </div>
        </div>
    </div>
</div>




<script>
    $('#exampleModal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget) // Button that triggered the modal
        var recipient = button.data('whatever') // Extract info from data-* attributes
        // If necessary, you could initiate an AJAX request here (and then do the updating in a callback).
        // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
        var modal = $(this)
        modal.find('.modal-title').text('Просмотр записи ' + recipient.Id)
        modal.find('.modal-body input recipient-name').val("Some shit")
    })
</script>