<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</head>
<body>
    <div>
        <div id="menu">
            <nav class="navbar navbar-expand-sm bg-info navbar-dark">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="/">Главная</a>
                    </li>
                    <li class="nav-item active dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" aria-haspopup="true"
                           aria-expanded="false">Разделы</a>
                        <div class="dropdown-menu bg-info">
                            <a class="dropdown-item text-white bg-info" href="/LeadDivisions/Index">Головные организации</a>
                            <a class="dropdown-item text-white bg-info" href="/LeadDivisions/Index">Дочерние организации</a>
                            <a class="dropdown-item text-white bg-info" href="">Объекты потребления</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item text-white bg-info" href="">Точки измерения</a>
                            <a class="dropdown-item text-white bg-info" href="">Точки поставки</a>
                            <a class="dropdown-item text-white bg-info" href="">Расчетные приборы учета</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item text-white bg-info" href="">Счетчики ЭЭ</a>
                            <a class="dropdown-item text-white bg-info" href="">Трансформаторы тока</a>
                            <a class="dropdown-item text-white bg-info" href="">Трансформаторы напряжения</a>
                        </div>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="">Контроль поверки приборов</a>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="container-sm">
            @RenderBody()
        </div>
        
    </div>

    <footer>
        @if (IsSectionDefined("Footer"))
        {
            @RenderSection("Footer")
        }
        else
        {
            <div style="bottom:0;position: fixed; width:100%;">
                <hr style="width:100%;" />
                <footer>
                    <p align="center">Copyright @DateTime.Now.Year by TNE</p>
                </footer>
            </div>
        }
    </footer>
</body>
</html>
