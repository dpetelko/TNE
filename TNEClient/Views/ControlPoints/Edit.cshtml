@using System;
@model ControlPointDto

@{
    ViewData["Title"] = "ТрансНефтьЭнерго - Точки потребления электроэнергии";
}

<div class="container-lg">
    <br>
    <h3 align="center">Редактирование точки потребления электроэнергии</h3>
    <br>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <form id="delete" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="ProviderName" class="control-label"></label>
                    <select asp-for="ProviderId" class="form-control" asp-items="ViewBag.ProviderList"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Выбор трансформатора тока</label>
                    @if (@ViewBag.CurrentTransformerList.Count != 0)
                    {
                        <br />
                        <table class="table table-stripped table-hover">
                            <tr>
                                <td>Выбор</td>
                                <td>Тип</td>
                                <td>Номер</td>
                                <td>КТ</td>
                                <td>Дата последней поверки</td>
                                <td>Дата очередной поверки</td>
                                <td></td>
                            </tr>
                            @foreach (var item in @ViewBag.CurrentTransformerList)
                            {
                                <tr>
                                    <td><input asp-for="CurrentTransformerId" type="radio" value="@item.Id" /></td>
                                    <td>@item.Type</td>
                                    <td>@item.Number</td>
                                    <td>@item.TransformationRate</td>
                                    <td>@item.LastVerificationDate.Date.ToShortDateString()</td>
                                    <td>@item.LastVerificationDate.AddDays(@item.InterTestingPeriodInDays).ToShortDateString() </td>
                                    <td>
                                        <a asp-action="Details" asp-controller="CurrentTransformers" asp-route-id="@item.Id" class="btn btn-outline-success btn-sm">Подробности</a>
                                    </td>
                                </tr>
                            }
                        </table>
                    }
                    else
                    {
                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control-plaintext" value="Трансформаторы тока отсутствуют на складе">
                        </div>
                    }
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Выбор трансформатора напряжения</label>
                    @if (@ViewBag.VoltageTransformerList.Count != 0)
                    {
                        <br />
                        <table class="table table-stripped table-hover">
                            <tr>
                                <td>Выбор</td>
                                <td>Тип</td>
                                <td>Номер</td>
                                <td>КТ</td>
                                <td>Дата последней поверки</td>
                                <td>Дата очередной поверки</td>
                                <td></td>
                            </tr>
                            @foreach (var item in @ViewBag.VoltageTransformerList)
                            {
                                <tr>
                                    <td><input asp-for="VoltageTransformerId" type="radio" value="@item.Id" /></td>
                                    <td>@item.Type</td>
                                    <td>@item.Number</td>
                                    <td>@item.TransformationRate</td>
                                    <td>@item.LastVerificationDate.Date.ToShortDateString()</td>
                                    <td>@item.LastVerificationDate.AddDays(@item.InterTestingPeriodInDays).ToShortDateString() </td>
                                    <td>
                                        <a asp-action="Details" asp-controller="VoltageTransformers" asp-route-id="@item.Id" class="btn btn-outline-success btn-sm">Подробности</a>
                                    </td>
                                </tr>
                            }
                        </table>
                    }
                    else
                    {
                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control-plaintext" value="Трансформаторы напряжения отсутствуют на складе">
                        </div>
                    }
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Выбор счетчика электроэнергии</label>
                    @if (@ViewBag.ElectricityMeterList.Count != 0)
                    {
                        <br />
                        <table class="table table-stripped table-hover">
                            <tr>
                                <td>Выбор</td>
                                <td>Тип</td>
                                <td>Номер</td>
                                <td>Дата последней поверки</td>
                                <td>Дата очередной поверки</td>
                                <td></td>
                            </tr>
                            @foreach (var item in @ViewBag.ElectricityMeterList)
                            {
                                <tr>
                                    <td><input asp-for="ElectricityMeterId" type="radio" value="@item.Id" /></td>
                                    <td>@item.Type</td>
                                    <td>@item.Number</td>
                                    <td>@item.LastVerificationDate.Date.ToShortDateString()</td>
                                    <td>@item.LastVerificationDate.AddDays(@item.InterTestingPeriodInDays).ToShortDateString() </td>
                                    <td>
                                        <a asp-action="Details" asp-controller="ElectricityMeters" asp-route-id="@item.Id" class="btn btn-outline-success btn-sm">Подробности</a>
                                    </td>
                                </tr>
                            }
                        </table>
                    }
                    else
                    {
                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control-plaintext" value="Счетчики электроэнергии отсутствуют на складе">
                        </div>
                    }
                </div>

                <div class="form-group">
                    <a asp-action="Index" onclick="return confirm('Изменения не будут сохранены. Уверены, что хотите покинуть страницу?')" class="btn btn-danger">К списку »</a>
                    <input type="submit" value="Сохранить" onclick="return confirm('Сохранить изменения?')" class="btn btn-warning" />
                </div>
            </form>
        </div>
    </div>
</div>

